  <link rel="icon" type="image/svg+xml" href="/images/favicon.png" />
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>

  <!-- The video -->
  <video autoplay muted loop id="myVideo">
    <source src="/video/wave.mp4" type="video/mp4">
