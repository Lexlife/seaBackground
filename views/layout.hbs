        <li><a href="/users/logout">Сменить пользователя</a></li>
        {{else}}
        <li><a href="/users/signin">Войти в личный кабинет</a></li>
        <li><a href="/users/signup">Создать личный кабинет</a></li>
        {{/if}}
      </ul>
      {{{body}}}
